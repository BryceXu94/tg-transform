{
  "compilerOptions": {
    "outDir": "./build",
    "target": "esnext",
    "module": "commonjs",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": false,
    "baseUrl": "./core",
    "types": [
      "./typing",
      "@types/node",
    ],
    "paths": {
      "@/*": [
        "core/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
  },
  "include": [
    "./core/**/*"
  ]
}
